<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Servlet_App</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- 배포서술자 DD -->
  
  <!-- Servlet 객체 생성 -> 클래스명 참조변수명 = new 생성자(); FQDN(Full Quality Domain Name) -->
  <servlet>
  	<servlet-name>
  		homeController
  	</servlet-name>
  	<servlet-class>
  		com.root.app.HomeController
  	</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>
  		departmentController
  	</servlet-name>
  	<servlet-class>
  		com.root.app.departments.DepartmentController
  	</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>
  		locationController
  	</servlet-name>
  	<servlet-class>
  		com.root.app.locations.LocationController
  	</servlet-class>
  </servlet>
  
  <!-- 어떤 요청이 왔을 때 누구를 실행 -->
  <servlet-mapping>
  	<servlet-name>homeController</servlet-name>
  	<url-pattern>/index.do</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>departmentController</servlet-name>
  	<url-pattern>/departments/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>locationController</servlet-name>
  	<url-pattern>/locations/*</url-pattern>
  </servlet-mapping>
  
</web-app>